import requests

title = raw_input("What are you reading? ")

def searchForBook(): #takes in user input, returns id for best match
    payload = {'q':title, 'key':'NsvXiH6QA7O1q3SvBLtvA'}
    r = requests.get('https://www.goodreads.com/search/index.xml', params=payload)
    #print(str(r.text))


def getXMLWithGenres(): #given ID, returns XML containing genres for book
    payload = {'format':'xml', 'key':'NsvXiH6QA7O1q3SvBLtvA', 'id':'375801', 'text_only':'False'}
    r = requests.get("https://www.goodreads.com/book/show/50", params=payload)
    #print(str(r.text))



searchForBook()
getXMLWithGenres()
